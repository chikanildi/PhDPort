
@page "/"
@page "/Index"
@using Microsoft.EntityFrameworkCore;
@using Phd_Port.Data;
@using Phd_Port.Model;

<PageTitle>phdport - Login</PageTitle>
@inject IDbContextFactory<BookmarkhubContext> DbFactory
@inject IJSRuntime JS
<link href="css/Css_Index.css" rel="stylesheet" />
<center>
    <div class="container">
        <div class="row">
            <!-- Additional Left Column with white background -->
            <!-- Insert the logo in the left column -->
        </div>
        <div class="col-8 card">
            <div class="col-12-row">
                <div class="loginbrand">
                    <form>
                        @* <img src="image/logosquare.png" alt="porticon" width="60%" height="60%"><br/>    *@
                        <img src="image/phdporttext10.png" alt="porticon" width="100%" height="100%"><br />

                        @* <span class="logotext2">phdport</span><br/><br/>  *@
                        @* <span class="registration">login</span><br />br *@
                        @if (showLoginmessage)
                        {
                            <i>@Datastore.loginMessage</i>

                            <br />
                        }
                        <label for="username">Username</label>
                        <input type="text" @bind="username" placeholder="Username" id="username" required class="input-field">
                        <label for="password">Password</label>
                        <input type="password" @bind="password" placeholder="Password" id="password" required class="input-field"><br />
                        <a href="/forgotusername" class="forgot-username">Forgot Password</a><br />
                        <button type="button" @onclick="Login" class="small-button">Login</button>

                        <a href="/registration" class="registration">Registration</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>
