@using Phd_Port.Model;
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<div class="top-menu">
    <div class="logo-container">
        <NavLink href="/index" Match="NavLinkMatch.All">
           
            <span class="logotext2">PhDport</span>
        </NavLink>
    </div>
    <NavLink href="/Members" Match="NavLinkMatch.All">Members</NavLink>
    <NavLink href="/Events" Match="NavLinkMatch.All">Events</NavLink>
     <NavLink href="/Jobposts" Match="NavLinkMatch.All">Jobposts</NavLink>
    <NavLink href="/Callforpapers" Match="NavLinkMatch.All">Call for Papers</NavLink>
    <NavLink href="/bookmarks" Match="NavLinkMatch.All">My Bookmarks</NavLink>
      <NavLink href="/Calendar2" Match="NavLinkMatch.All">My Calendar</NavLink>
    <NavLink href="/Feed" Match="NavLinkMatch.All">My Feed</NavLink>
    @* <NavLink href="/Wordcloud" Match="NavLinkMatch.All">Wordcloud</NavLink> *@
    <NavLink href="/Worldmap" Match="NavLinkMatch.All">Worldmap</NavLink>
    @* <NavLink href="/Favorites" Match="NavLinkMatch.All">Favorites</NavLink> *@
    <NavLink href="/Admin" Match="NavLinkMatch.All">Admin</NavLink>
    <NavLink href="/Index" Match="NavLinkMatch.All" @onclick="Logout">
        <span style="color: yellow;">@Datastore.userName</span><br />
        <span style="color: white;">Logout</span>
    </NavLink>
</div>

<div class="main-content">
    @Body
</div>

<footer class="footer">
    @* <span>Contact us: admin@phdport.com | Phone: +43 670 400 4600 |</span> *@
        <a href="/about">About Us</a> | 
           <a href="/privacy">Privacy Policy</a> | 
           <a href="/terms">Terms of Service</a> |
           <a href="/contact">Contact</a> 
</footer>

<style>
    /* Add some basic styles for the menu and main content */

    .top-menu {
        background-color: #0C1F30ff;
        font-size: 18px;
        display: flex;
        color: white;
        text-transform: lowercase;
        font-weight: 400;
        align-items: center; /* Center items vertically */
        justify-content: space-around;
        padding-right: 5px;
        padding-left: 5px;
        font-weight: 400;
        height: 80px;
    }

    .logo-image {
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .logo-container {
        display: flex;
        flex-direction: column;
    }

    .logotext1 {
        font-size: 18px;
        padding-left: 3px;
        padding-right: 5px;
        color: white;
        font-weight: 200;
        margin-bottom: 5px;
        border-left: 3px solid red;
    }

    .logotext2 {
        font-size: 29px;
        padding-right: 15px;
        
        color: black;
        font-weight: 200;
        padding-left: 20px;
        margin-top: 0px; /* Adjust the margin to move the logotext closer to the top */
        text-align: left;
        /*        border-top: 3px solid white;
        border-bottom: 3px solid white;*/
        margin-bottom: 0px;
        margin-left: 0px;
        background-color: #8B80F9;
        font-weight: 400;
    }

    .top-menu a {
        color: white;
        text-decoration: none;
        padding-top: 0px; /* Adjust the padding-top value here as well */
        position: relative;
        font-size: 17px; /* Increase the font size for a bolder appearance */
        margin-left: 10px; /* Add margin to the left of the menu items */
    }

        .top-menu a:not(:last-child)::after {
            /* Add the pipe character as a separator between menu items */
            content: "|";
            margin-left: 5px;
        }

    .top-menu .active {
        color: black; /* Yellow color or any distinctive color you prefer */
     text-decoration: none;
            padding-top: 0px; /* Adjust the padding-top value here as well */
            padding-left: 5px;
            position: relative;
            font-size: 17px; /* Increase the font size for a bolder appearance */
            margin-left: 10px; /* Add margin to the left of the menu items */
            background-color: #8B80F9;
    }

   

    /* Remove the pipe separator from the last menu item */
    .top-menu a:last-child::after {
        content: none;
    }

    .main-content {
        padding: 10px;
        height: 80%;
    }
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #111f2f;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #dee2e6;
            color: white;
            font-size: 12px;
        }
        
           .footer a {
           color: white;
           text-decoration: none;
           padding-left: 10px;
           padding-right: 10px;
           }

    /* Contact information */
    .contact-info {
        margin-bottom: 15px;
        /*        border: 1px solid red;*/
        margin-top: 0px;
    }

        .contact-info p {
            margin: 0;
        }

    /* Navigation links */
    .navigation ul {
        list-style: none;
        padding: 0;
        margin-bottom: 0px; /* Reduced the margin from 20px to 10px */
    }

    .navigation li {
        display: inline-block;
        margin-right: 15px;
        margin-bottom: 0px;
    }

        .navigation li:last-child {
            margin-right: 0;
        }

    .navigation a {
        text-decoration: none;
        color: white;
        /*font-weight: bold;*/
        /*        border: 1px solid red;*/
    }

    /* Social media icons */
    .social-icons {
        margin-bottom: 0px; /* Reduced the margin from 20px to 10px */
    }

        .social-icons a {
            display: inline-block;
            width: 40px;
            height: 40px;
            background-color: #444;
            color: #333;
            text-align: center;
            line-height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            text-decoration: none;
        }

    /* Legal links */
    .legal-links {
        font-size: 14px;
        margin-bottom: 0px; /* Reduced the margin from 20px to 10px */
    }

        .legal-links a {
            text-decoration: none;
            color: #333;
        }

            .legal-links a:not(:last-child)::after {
                content: " | ";
            }

    /* Style Font Awesome icons (optional, if you are using Font Awesome) */
    .social-icons .icon {
        font-size: 20px;
    }

    /* Add hover effect for links and social media icons (optional) */
    .navigation a:hover,
    .social-icons a:hover {
        color: #333;
        background-color: #yellow;
    }


    .contact-info,
    .navigation,
    .social-icons,
    .legal-links {
        text-align: center;
    }

        .contact-info p {
            margin-bottom: 0px;
        }

        .navigation ul {
            margin-bottom: 0px;
        }

    .social-icons,
    .legal-links {
        margin-bottom: 0px;
    }
   
</style>

@code {
    private async Task Logout()
    {
        // Implement your logout logic here (e.g., clear user session, authentication tokens, etc.)
        // For example, if you're using authentication, you can call the logout method of the authentication service.

        Datastore.isLoggedin = false;
        Datastore.userName = "";
        Datastore.userId = 0;

        // After logout, redirect the user to the desired page (e.g., the login page)
        NavigationManager.NavigateTo("/");
    }
}
